<Window
    x:Name="_window"
    x:Class="AdobePDFServicesFront.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AdobePDFServicesFront.Windows"
    xmlns:control="clr-namespace:AdobePDFServicesFront.Controls"  
    xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" 
    mc:Ignorable="d"
    Title="MainWindow"
    Height="450" Width="800"
    Loaded="_loaded"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Wpf:WebView2 
            Grid.Row="0"
            Grid.Column="0"
            Margin="2"
            x:Name="_webView"
            />
        <GridSplitter
            Grid.Row="0"
            Grid.Column="1"
            Width="2"
            Background="Gray" 
            HorizontalAlignment="Center" 
            />
        <Grid
            Grid.Row="0"
            Grid.Column="2"
            Margin="2"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <control:OpenPdfControl
                x:Name="_selectPdfControl"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FilePath="{Binding FilePath,ElementName=_window,Mode=OneWay}"
                />
            <control:CredentialsControl 
                x:Name="_credentialsControl"
                Grid.Row="2"
                Grid.Column="0"
                />
            <Menu
                Grid.Row="3"
                Grid.Column="0"
                >
                <MenuItem 
                        Header="結合"
                        Click="_combineMenuItemClick"
                        />
                <MenuItem
                        Header="処理"
                    >
                    <MenuItem 
                        Header="自動タグ"
                        Click="_autoTagMenuItemClick"
                        />
                    <MenuItem 
                        Header="OCR"
                        Click="_ocrMenuItemClick"
                        />
                    <MenuItem 
                        Header="軽量化"
                        Click="_compressMenuItemClick"
                        />
                </MenuItem>
            </Menu>
            <ItemsControl
                x:Name="_itemsPanel"
                Grid.Row="4"
                Grid.Column="0"
                ItemsSource="{Binding ControlList,ElementName=_window,Mode=OneWay}"
                >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Vertical"
                            />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Grid
                Grid.Row="5"
                Grid.Column="0"
                Margin="2"    
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Content="実行"
                    Click="_runButtonClick"
                    />
                <control:ExportControl
                    x:Name="_exportControl"
                    Grid.Column="1"
                    />
            </Grid>
        </Grid>
    </Grid>
</Window>
