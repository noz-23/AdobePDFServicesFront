<UserControl
    x:Name="_userControl"
    x:Class="AdobePDFServicesFront.Controls.OpenPdfControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AdobePDFServicesFront.Controls"
    mc:Ignorable="d"     
    d:DesignHeight="45" 
    d:DesignWidth="300"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock
            x:Name="_textBlock"
            Grid.Column="0"
            Margin="2"
            VerticalAlignment="Center"
            Text="対象"
            />
        <StackPanel
            Grid.Column="1"
            Margin="2"
            >
            <TextBox 
                VerticalAlignment="Center"
                Text="{Binding Path,ElementName=_userControl,Mode=TwoWay}"
            />
            <TextBlock 
                Margin="2"
                VerticalAlignment="Center"
                Text="{Binding Info, Mode=OneWay}"
            />
        </StackPanel>
        <Button
            Grid.Column="3"
            Margin="2"
            Content="参照"
            Click="_buttonClick"
            />
    </Grid>
</UserControl>
