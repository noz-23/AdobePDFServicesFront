<local:EventControl 
    x:Class="AdobePDFServicesFront.Controls.CombineControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AdobePDFServicesFront.Controls"
    mc:Ignorable="d" 
    d:DesignHeight="30"
    d:DesignWidth="400"
    BorderBrush="Black"
    BorderThickness="1"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            Margin="3,0,1,0"
            VerticalAlignment="Center"
            Text="結合"
            FontWeight="Bold"
            />
        <local:SelectPdfControl
            x:Name="_selectPdfControl"
            Grid.Column="1"
            Margin="2"
            VerticalAlignment="Center"
            Title="選択"
            />
        <Button
            Grid.Column="2"
            Margin="2"
            Width="25"
            Height="25"
            Content="×"
            FontWeight="Bold" 
            Click="_ButtonClick"
            >
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border 
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</local:EventControl>
