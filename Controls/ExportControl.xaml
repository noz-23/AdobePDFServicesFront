<local:EventControl
    x:Class="AdobePDFServicesFront.Controls.ExportControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AdobePDFServicesFront.Controls"
    xmlns:prop="clr-namespace:AdobePDFServicesFront.Properties"
    mc:Ignorable="d" 
    d:DesignHeight="215"
    d:DesignWidth="400"
    BorderBrush="Gray"
    BorderThickness="1"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <local:SaveFileControl
            x:Name="_pdfSaveControl"
            Grid.Row="0"
            Grid.Column="1"
            Margin="2"
            VerticalAlignment="Center"
            TitleName="PDF保存" 
            Extension="{x:Static prop:Resources.ExtensionPDF}"
            />
        <Expander
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="2"           >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <CheckBox 
                    x:Name="_splitCheckBox"
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="分割" 
                    />
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    >
                    <TextBox 
                        x:Name="_splitTextBox"
                        Width="100"
                        Margin="2"
                        VerticalAlignment="Center"
                        Text="1"
                        TextAlignment="Right"
                        />
                    <TextBlock
                        Text="最大ページ数"
                        />
                </StackPanel>
                <CheckBox 
                    x:Name="_xlsxCheckBox"
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Excel 出力" 
                    />
                <local:SaveFileControl
                    x:Name="_xlsxSaveControl"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="2"
                    VerticalAlignment="Center"
                    TitleName="" 
                    Extension="{x:Static prop:Resources.ExtensionXLSX}"
                    />
                <CheckBox
                    x:Name="_docxCheckBox"                    
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Word 出力"
                    />
                <local:SaveFileControl
                    x:Name="_docxSaveControl"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="2"
                    VerticalAlignment="Center"
                    TitleName="" 
                    Extension="{x:Static prop:Resources.ExtensionDOCX}"
                    />
                <CheckBox 
                    x:Name="_pptxCheckBox"
                    Grid.Row="3"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="PowerPoint 出力"
                    />
                <local:SaveFileControl
                    x:Name="_pptxSaveControl"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="2"
                    VerticalAlignment="Center"
                    TitleName=""
                    Extension="{x:Static prop:Resources.ExtensionPPTX}"
                    />
                <CheckBox 
                    x:Name="_imageCheckBox"
                    Grid.Row="4"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="画像 出力" 
                    />
                <local:SaveFileControl
                    x:Name="_imageSaveControl"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="2"
                    VerticalAlignment="Center"
                    TitleName="" 
                    Extension="{x:Static prop:Resources.ExtensionZIP}"
                    />
                <CheckBox 
                    x:Name="_textCheckBox"
                    Grid.Row="5"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="テキスト 出力"
                    />
                <local:SaveFileControl
                    x:Name="_textSaveControl"
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="2"
                    VerticalAlignment="Center"
                    TitleName="" 
                    Extension="{x:Static prop:Resources.ExtensionZIP}"
                    />
            </Grid>
        </Expander>
    </Grid>
</local:EventControl>
